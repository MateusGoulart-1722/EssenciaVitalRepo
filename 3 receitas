package com.example.essenciavital;

import android.os.Bundle;
import android.view.View;
import android.widget.*;
import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;

import com.google.android.material.textfield.TextInputEditText;

public class MainActivity extends AppCompatActivity {

    /* ----------- TELAS (LAYOUTS) ------------ */
    View telaLogin, telaCadastro, telaBemVindo, telaQuestionario, telaReceita;

    /* ----------- LOGIN ------------ */
    Button btnLogin, btnCadastrarLogin;
    TextInputEditText usuarioLogin;
    EditText senhaLogin;

    /* ----------- CADASTRO ------------ */
    Button btnCadastrar;
    TextInputEditText emailCadastro;
    EditText usuarioCadastro, senhaCadastro, confSenhaCadastro;

    /* ----------- BEM VINDO ------------ */
    Button btnQuestionario, btnReceitas;

    /* ----------- QUESTION√ÅRIO ------------ */
    RadioGroup grupoPerg;
    RadioButton rA, rB, rC, rD;
    Button btnProx;
    TextView txtPergunta;

    int questaoAtual = 0;

    String[] perguntas = {
            "1. Qual sua pretens√£o com a dieta?",
            "2. Como √© seu almo√ßo?",
            "3. Como √© sua janta?",
            "4. Quer aumentar consumo de:",
            "5. Voc√™ cozinha?"
    };

    String[][] alternativas = {
            {"Perder peso", "Ganhar massa", "Alimenta√ß√£o saud√°vel", "Vegana"},
            {"Tradicional", "Lanches", "N√£o almo√ßo", "Vegetais"},
            {"Tradicional", "Lanches", "N√£o janto", "Vegetais"},
            {"Carne vermelha", "Carne branca", "Verduras", "Legumes"},
            {"Cozinho almo√ßo", "Cozinho janta", "Ambos", "N√£o cozinho"}
    };

    /* ----------- RECEITAS ------------ */
    Button btnVerQuest, btnReceita1, btnReceita2, btnReceita3;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main); // Layout √∫nico

        /* TELAS */
        telaLogin = findViewById(R.id.telaLogin);
        telaCadastro = findViewById(R.id.telaCadastro);
        telaBemVindo = findViewById(R.id.telaBemVindo);
        telaQuestionario = findViewById(R.id.telaQuestionario);
        telaReceita = findViewById(R.id.telaReceita);

        /* LOGIN */
        btnLogin = findViewById(R.id.btn_login);
        btnCadastrarLogin = findViewById(R.id.btn_cadastrar);
        usuarioLogin = findViewById(R.id.tie_nome);
        senhaLogin = findViewById(R.id.enp_senha);

        /* CADASTRO */
        btnCadastrar = findViewById(R.id.btn_cadastrar2);
        emailCadastro = findViewById(R.id.tie_email);
        usuarioCadastro = findViewById(R.id.enp_nome);
        senhaCadastro = findViewById(R.id.enp_csenha);
        confSenhaCadastro = findViewById(R.id.enp_confsenha);

        /* BEM VINDO */
        btnQuestionario = findViewById(R.id.btn_questionario);
        btnReceitas = findViewById(R.id.btn_receitas);

        /* QUESTION√ÅRIO */
        grupoPerg = findViewById(R.id.rdg_perguntas_PG);
        rA = findViewById(R.id.rdb_a_PG);
        rB = findViewById(R.id.rdb_b_PG);
        rC = findViewById(R.id.rdb_c_PG);
        rD = findViewById(R.id.rdb_d_PG);
        btnProx = findViewById(R.id.btn_enviar);
        txtPergunta = findViewById(R.id.txv_questao_PG);

        /* RECEITAS */
        btnVerQuest = findViewById(R.id.btnVerQuest);
        btnReceita1 = findViewById(R.id.btn_verreceita1);
        btnReceita2 = findViewById(R.id.btn_verreceita2);
        btnReceita3 = findViewById(R.id.btn_verreceita3);

        mostrarTela(telaLogin);

        /* ------ LOGIN ------ */
        btnLogin.setOnClickListener(v -> {
            String usuario = usuarioLogin.getText().toString();
            String senha = senhaLogin.getText().toString();

            if (usuario.equals("admin") && senha.equals("1234")) {
                Toast.makeText(this, "Login OK", Toast.LENGTH_SHORT).show();
                mostrarTela(telaBemVindo);
            } else {
                Toast.makeText(this, "Dados inv√°lidos", Toast.LENGTH_SHORT).show();
            }
        });

        btnCadastrarLogin.setOnClickListener(v -> mostrarTela(telaCadastro));

        /* ------ CADASTRO ------ */
        btnCadastrar.setOnClickListener(v -> {

            if (senhaCadastro.getText().toString().equals(confSenhaCadastro.getText().toString())) {
                Toast.makeText(this, "Usu√°rio cadastrado!", Toast.LENGTH_SHORT).show();
                mostrarTela(telaBemVindo);
            } else {
                Toast.makeText(this, "Senhas diferentes", Toast.LENGTH_SHORT).show();
            }

        });

        /* ------ BEM VINDO ------ */
        btnQuestionario.setOnClickListener(v -> {
            questaoAtual = 0;
            carregarQuestao();
            mostrarTela(telaQuestionario);
        });

        btnReceitas.setOnClickListener(v -> mostrarTela(telaReceita));

        /* ------ QUESTIONARIO ------ */
        btnProx.setOnClickListener(v -> {
            if (questaoAtual < perguntas.length - 1) {
                questaoAtual++;
                carregarQuestao();
            } else {
                Toast.makeText(this, "Question√°rio finalizado!", Toast.LENGTH_SHORT).show();
                mostrarTela(telaReceita);
            }
        });

        /* ------ RECEITAS ------ */
        btnVerQuest.setOnClickListener(v -> mostrarTela(telaQuestionario));
    }

    private void mostrarTela(View tela) {
        telaLogin.setVisibility(View.GONE);
        telaCadastro.setVisibility(View.GONE);
        telaBemVindo.setVisibility(View.GONE);
        telaQuestionario.setVisibility(View.GONE);
        telaReceita.setVisibility(View.GONE);

        tela.setVisibility(View.VISIBLE);
    }

    private void carregarQuestao() {
        txtPergunta.setText(perguntas[questaoAtual]);
        rA.setText(alternativas[questaoAtual][0]);
        rB.setText(alternativas[questaoAtual][1]);
        rC.setText(alternativas[questaoAtual][2]);
        rD.setText(alternativas[questaoAtual][3]);

        grupoPerg.clearCheck();
    }
}
package com.example.essenciavital;

import android.os.Bundle;
import android.widget.Button;
import android.widget.TextView;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;

public class ELogicaReceitaVegana extends AppCompatActivity {

    Button botaoQuest;
    Button botaoReceita1, botaoReceita2, botaoReceita3;

    TextView txtTituloReceita;
    TextView txtConteudoReceita;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.e_tela_receita_vegana);

        botaoQuest = findViewById(R.id.btnVerQuest);
        botaoReceita1 = findViewById(R.id.btn_verreceita1);
        botaoReceita2 = findViewById(R.id.btn_verreceita2);
        botaoReceita3 = findViewById(R.id.btn_verreceita3);

        txtTituloReceita = findViewById(R.id.txtTituloReceita);
        txtConteudoReceita = findViewById(R.id.txtConteudoReceita);

        // Receita padr√£o na tela
        exibirReceita1();

        // üëâ Bot√µes das receitas
        botaoReceita1.setOnClickListener(v -> exibirReceita1());
        botaoReceita2.setOnClickListener(v -> exibirReceita2());
        botaoReceita3.setOnClickListener(v -> exibirReceita3());

        // üëâ Voltar para o question√°rio
        botaoQuest.setOnClickListener(v -> {
            finish(); // volta pra tela anterior (Question√°rio)
        });
    }

    private void exibirReceita1() {
        txtTituloReceita.setText("ü•ó Salada Proteica Vegana");

        txtConteudoReceita.setText(
                "Ingredientes:\n" +
                        "- Gr√£o-de-bico cozido\n" +
                        "- Tomate\n" +
                        "- Pepino\n" +
                        "- Lim√£o\n" +
                        "- Azeite\n\n" +

                        "Modo de preparo:\n" +
                        "Misture tudo, tempere com lim√£o e azeite e sirva fria."
        );
    }

    private void exibirReceita2() {
        txtTituloReceita.setText("üçù Macarr√£o Integral Vegano");

        txtConteudoReceita.setText(
                "Ingredientes:\n" +
                        "- Macarr√£o integral\n" +
                        "- Alho\n" +
                        "- Molho de tomate\n" +
                        "- Manjeric√£o\n\n" +

                        "Modo de preparo:\n" +
                        "Cozinhe o macarr√£o e refogue o alho no molho de tomate."
        );
    }

    private void exibirReceita3() {
        txtTituloReceita.setText("üçî Hamb√∫rguer Vegano");

        txtConteudoReceita.setText(
                "Ingredientes:\n" +
                        "- Lentilha cozida\n" +
                        "- Aveia\n" +
                        "- Alho\n" +
                        "- Cebola\n\n" +

                        "Modo de preparo:\n" +
                        "Misture tudo, modele e frite sem √≥leo."
        );
    }
}
